{
  "name": "@prncss-xyz/utils",
  "version": "0.0.0",
  "type": "module",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/prncss-xyz/utils.git"
	},
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dev:test": "vitest watch",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "test:types": "tsc --noEmit",
    "format": "prettier --write ./src"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "knip": "^5.42.2",
    "@cspell/eslint-plugin": "^8.17.2",
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.5",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "nanoid": "^5.0.9"
  },
  "peerDependencies": {
    "@constellar/core": "^2.4.2"
  }
}
